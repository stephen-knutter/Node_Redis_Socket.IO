<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/cosmo.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <h1 class="pull-left">Redis Chat</h1>
        </div>
        <div class="col-sm-4 col-sm-offset-4 top-margin">
          <div class="pull-right">
            <% if (isAuthenticated) { %>
              <%- partial('partials/user-loggedin') %>
            <% } else { %>
              <%- partial('partials/user-loggedout') %>
            <% } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <%- body %>
        </div>
      </div>
    </div>
  </body>
</html>
